  "version": "0.2.0",
  "compounds": [
    {
      "name": "fullstack: Nuxt & Chrome",
      "configurations": ["server: Nuxt", "client: Chrome"]
    }
  ],
  "configurations": [
    {
      "name": "client: Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "Sleep Delay"
    },
    {
      "name": "server: Nuxt",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "console": "integratedTerminal"
    }
  ]
}